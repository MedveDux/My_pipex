Name 	= pipex
SRCS_Mandatory	= ./srcs/pipex.c ./srcs/utils.c
SRCS_Bonus = ./srcs/pipex_bonus.c ./srcs/utils_bonus.c
OBJ 	= $(SRCS_Mandatory:.c=.o)
OBJ_Bonus 	= $(SRCS_Bonus:.c=.o)
FLAGS1 	= -Wall -Wextra -Werror 
HEAD1 	= ./includes/pipex.h libft/libft.h ./includes/pipex_bonus.h
#HEAD_B1 = ./includes/pipex_bonus.h libft/libft.h
#HEAD1 =  libft/libft.h

all		: 	$(Name)
$(Name)	:  libft/libft.a $(OBJ)
	gcc -o $(Name) $(OBJ) libft/libft.a

%.o 	: %.c $(HEAD1) Makefile
		cc $(FLAGS1) -O2 -c $< -o $@

libft/libft.a : 
		make -C libft

bonus	:  libft/libft.a $(OBJ_Bonus) libft/libft.h ./includes/pipex.h
		gcc -o $(Name) $(OBJ_Bonus) libft/libft.a
#		make OBJ2="$(OBJ_B1)" all

clean	: 
		rm -f $(OBJ) $(OBJ_Bonus)
		make -C libft fclean
		
	
fclean	: clean
		rm -f $(Name)

re		: fclean all

.PHONY	: all clean fclean re bonus 